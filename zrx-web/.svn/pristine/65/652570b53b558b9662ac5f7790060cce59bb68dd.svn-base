.hsww-wrapper {
    padding: 10px;
}
.hsww-row {
    display: table;
    margin-bottom: 10px;
    line-height: 20px;
    width: 100%;
    padding-top: 5px;
}
.hsww-row:hover {
    background: #ddf3f7;
}
.hsww-row .hsww-left {
    display: table-cell;
    width: 80px;
    color: #333;
    font-size: 14px;
    font-weight: bold;
}
.hsww-row .hsww-right {
    display: table-cell;
    color: #5e5e5e
}
.hsww-row .hsww-right label {
    margin-right: 20px;
    margin-bottom: 5px;
    font-size: 14px;
}
.hsww-row.view .checkbox-inline{
    cursor: default;
}

.hsww-row .checkbox.checked {
    background: #ddf3f7;
}
.hsww-row .checkbox-inline {
    vertical-align: top;
    margin-top: 0;
    padding-left: 25px;
}
.hsww-row .checkbox-inline {
    position: relative;
    display: inline-block;
    padding-left: 20px;
    margin-bottom: 0;
    vertical-align: middle;
    font-weight: normal;
    cursor: pointer;
}
.hsww-row .checkbox input[type="checkbox"], .hsww-row .checkbox-inline input[type="checkbox"] {
    position: absolute;
    margin-left: -20px;
    margin-top: 4px \9;
}
.hsww-row .checkbox input {
    width: 14px;
    height: 14px;
}
.hsww-row .checkbox input {
    top: 0;
    left: 0;
    margin-left: 0 !important;
    z-index: 1;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
    margin-top: 0;
}
.hsww-row input[type="checkbox"] {
    margin: 4px 0 0;
    margin-top: 1px \9;
    line-height: normal;
}
.hsww-row input[type="checkbox"] {
    box-sizing: border-box;
    padding: 0;
}
.hsww-row .checkbox input:checked + .input-helper:before {
    -webkit-transform: scale(0);
    -ms-transform: scale(0);
    -o-transform: scale(0);
    transform: scale(0);
}
.hsww-row .checkbox .input-helper:before {
    top: 3px;
    width: 14px;
    height: 14px;
}
.hsww-row .checkbox .input-helper:before {
    left: 0;
    border: 1px solid #ccc;
}
.hsww-row .checkbox .input-helper:before, .hsww-row .checkbox .input-helper:after {
    -webkit-transition: all;
    -o-transition: all;
    transition: all;
    -webkit-transition-duration: 250ms;
    transition-duration: 250ms;
    -webkit-backface-visibility: hidden;
    -moz-backface-visibility: hidden;
    backface-visibility: hidden;
    position: absolute;
    content: "";
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.hsww-row .checkbox input:checked + .input-helper:after {
    -webkit-transform: scale(1) rotate(-50deg);
    -ms-transform: scale(1) rotate(-50deg);
    -o-transform: scale(1) rotate(-50deg);
    transform: scale(1) rotate(-50deg);
    opacity: 1;
    filter: alpha(opacity=100);
}
.hsww-row .checkbox .input-helper:after {
    opacity: 0;
    filter: alpha(opacity=0);
    -webkit-transform: scale(0) rotate(80deg);
    -ms-transform: scale(0) rotate(80deg);
    -o-transform: scale(0) rotate(80deg);
    transform: scale(0) rotate(80deg);
    width: 22px;
    height: 9px;
    border-bottom: 2px solid #0088CC;
    border-left: 2px solid #0088CC;
    border-bottom-left-radius: 2px;
    left: -1px;
    top: 1px;
}