.tnufContainer {
    position: relative;
}
.tnufContainer .fileinputButton {
    float: left;
    margin-right: 4px;
    overflow: hidden;
    position: relative;
}
.tnufContainer .fileinputButton input {
    -moz-border-bottom-colors: none;
    -moz-border-image: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    -moz-transform: translate(-300px, 0pt) scale(4);
    border-color: transparent;
    border-style: solid;
    border-width: 0 0 100px 200px;
    cursor: pointer;
    direction: ltr;
    margin: 0;
    opacity: 0;
    position: absolute;
    right: 0;
    top: 0;
}
.tnufContainer .tnufBody{
    background-color: #FFFFFF;
    display: none;
    width: 450px;
    box-shadow: rgba(0, 0, 0, 0.0745098) 0px 1px 1px inset, rgba(82, 168, 236, 0.6) 0px 0px 8px;
    padding:8px;
    border-radius: 3px;
    position: absolute;
    top: 0px;
    left: 96px;
    z-index:99999;
}
.tnufContainer .tnufBody .filesList{
    list-style: none;
    margin: 0;
    padding: 0;
}
.tnufContainer .tnufBody .filesList li{
    margin: 5px 0;
    padding: 5px;
    list-style: none;
}
.tnufContainer .tnufBody .filesList div{
    float: left;
}
.tnufContainer .tnufBody .filesList div:first-of-type{
    width:150px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 10px;
}
.tnufContainer .tnufBody .filesList div:nth-child(2){
    width:101px;
}
.tnufContainer .tnufBody .filesList div:nth-child(3){
    width:60px;
}
.tnufContainer .tnufBody .filesList div:last-of-type{
    width:119px;
}
.tnufContainer .tnufFooter{
    text-align: right;
}
.tnufContainer .tnufFooter a{
    margin: 5px 3px 5px 0;
}